{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NEURO",
  "scopeName": "source.neuro",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#structs"
    },
    {
      "include": "#enums"
    },
    {
      "include": "#traits"
    },
    {
      "include": "#impls"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.neuro",
          "match": "//.*$"
        },
        {
          "name": "comment.block.neuro",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.neuro",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.neuro",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.neuro",
              "match": "\\{[^}]*\\}"
            }
          ]
        },
        {
          "name": "string.quoted.triple.neuro",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.neuro",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.neuro",
              "match": "\\{[^}]*\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.neuro",
          "match": "\\b([0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?)\\b"
        },
        {
          "name": "constant.numeric.integer.neuro",
          "match": "\\b([0-9]+)\\b"
        },
        {
          "name": "constant.numeric.hex.neuro",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.neuro",
          "match": "\\b0[bB][01]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.neuro",
          "match": "\\b(if|else|while|for|in|break|continue|return|match)\\b"
        },
        {
          "name": "keyword.declaration.neuro",
          "match": "\\b(func|struct|enum|impl|trait|import|export|module)\\b"
        },
        {
          "name": "keyword.mutability.neuro",
          "match": "\\b(val|mut)\\b"
        },
        {
          "name": "keyword.special.neuro",
          "match": "\\b(self|Self|where)\\b"
        },
        {
          "name": "keyword.ownership.neuro",
          "match": "\\b(owned|ref)\\b"
        },
        {
          "name": "keyword.future.neuro",
          "match": "\\b(async|await|yield|const|static|unsafe|macro)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.neuro",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|string|Tensor)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.neuro",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.neuro",
          "match": "[+\\-*/%!=<>&|^~@?]|==|!=|<=|>=|&&|\\|\\||<<|>>|\\|\\>|\\>\\>|\\.\\.|\\."
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "storage.modifier.attribute.neuro",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.neuro"
            },
            "2": {
              "name": "entity.name.function.neuro"
            }
          }
        }
      ]
    },
    "structs": {
      "patterns": [
        {
          "match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.neuro"
            },
            "2": {
              "name": "entity.name.type.struct.neuro"
            }
          }
        }
      ]
    },
    "enums": {
      "patterns": [
        {
          "match": "\\b(enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.neuro"
            },
            "2": {
              "name": "entity.name.type.enum.neuro"
            }
          }
        }
      ]
    },
    "traits": {
      "patterns": [
        {
          "match": "\\b(trait)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.neuro"
            },
            "2": {
              "name": "entity.name.type.trait.neuro"
            }
          }
        }
      ]
    },
    "impls": {
      "patterns": [
        {
          "match": "\\b(impl)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.neuro"
            },
            "2": {
              "name": "entity.name.type.impl.neuro"
            }
          }
        }
      ]
    }
  }
}